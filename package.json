{
  "devDependencies": {
    "@types/chrome": "^0.0.243",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.1",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6"
  },
  "scripts": {
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u 1 src/**/*.html src/**/*.json src/**/*.css dist/",
    "build": "pnpm clean && tsc && pnpm copy-files && pnpm tw:build",
    "tw:watch": "tailwindcss -i src/styles/tw.css -o dist/output.css --watch",
    "tw:build": "tailwindcss -i src/styles/tw.css -o dist/output.css --minify"
  }
}
