{
  "devDependencies": {
    "@types/chrome": "^0.0.243",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.1",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6"
  },
  "scripts": {
    "clean": "rimraf dist/",
    "dev": "pnpm tw:watch & pnpm ts:dev",
    "build": "pnpm clean && pnpm ts:build && pnpm copy-files && pnpm tw:build",
    "copy-files": "copyfiles -u 1 src/**/*.html src/**/*.json src/**/*.svg src/**/*.css dist/",
    "ts:build": "tsc --noEmit false --outDir dist",
    "ts:dev": "tsc --watch",
    "tw:watch": "tailwindcss -i src/styles/tw.css -o src/popup/tw.css --watch",
    "tw:build": "tailwindcss -i src/styles/tw.css -o dist/popup/tw.css --minify"
  }
}
